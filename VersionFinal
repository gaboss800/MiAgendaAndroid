// Método Principal
package com.gab.myagenda;


import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

       // ConexionSQLiteHelper conn= new ConexionSQLiteHelper(this, "bd_contactos", null, 1);

    }

    public void onClick(View view){
        Intent miIntent=null;
        switch (view.getId()){
            case R.id.btnAgregar:
                miIntent = new Intent(MainActivity.this, RegistroContactosActivity.class);
                startActivity(miIntent);
                new RegistroContactosActivity();
                break;

            case R.id.btnMostrar:
                miIntent = new Intent(MainActivity.this, MostrarContactos.class);
                startActivity(miIntent);
                new MostrarContactos();
                break;


            case R.id.btnModificar:
                miIntent = new Intent(MainActivity.this, ModificarContacto.class);
                startActivity(miIntent);
                new ModificarContacto();
                break;

            case R.id.btnEliminar:
                miIntent = new Intent(MainActivity.this, EliminarContacto.class);
                startActivity(miIntent);
                new EliminarContacto();
                break;

            case R.id.btnBuscar:
                miIntent = new Intent(MainActivity.this, BuscarContacto.class);
                startActivity(miIntent);
                new BuscarContacto();
                break;
        }
       
    }
}









// Creación y manejo de base de datos en SQLite

package com.gab.myagenda;

import  android.content.Context;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;

import androidx.annotation.Nullable;

import com.gab.myagenda.utilidades.Utilidades;

public class ConexionSQLiteHelper extends SQLiteOpenHelper {



        public ConexionSQLiteHelper(@Nullable Context, @Nullable String name, @Nullable SQLiteDatabase.CursorFactory factory, int version) {
        super(context, name, factory, version);
    }

    @Override
    public void onCreate(SQLiteDatabase db) {
            db.execSQL(Utilidades.CREAR_TABLA_USUARIO);

    }

    @Override
    public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
            db.execSQL("DROP TABLE IF EXISTS contactos");
            onCreate(db);

    }
}




// Creación de tabla Contactos

package com.gab.myagenda.utilidades;

public class Utilidades {

    //Constantes campos tabla de contactos
    public static final String TABLA_USUARIO = "contactos";
    public static final String CAMPO_ID = "id";
    public static final String CAMPO_NOMBRE = "nombre";
    public static final String CAMPO_TELEFONO = "telefono";
    public static final String CAMPO_CORREO = "correo";


    public static final String CREAR_TABLA_USUARIO="CREATE TABLE "+TABLA_USUARIO+" ("+CAMPO_ID+" INTEGER,"+CAMPO_NOMBRE+" TEXT,"+CAMPO_TELEFONO+" TEXT, "+CAMPO_CORREO+" TEXT)";

}




// Elementos o campos de un Contacto

package com.gab.myagenda.entidades;

public class Contacto {

    private Integer id;
    private String nombre;
    private String telefono;
    private String correo;

    public Contacto() {
        this.id = id;
        this.nombre = nombre;
        this.telefono = telefono;
        this.correo = correo;
    }

    public Integer getId() {
        return id;
    }

    public void setId(Integer id) {
        this.id = id;
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public String getTelefono() {
        return telefono;
    }

    public void setTelefono(String telefono) {
        this.telefono = telefono;
    }

    public String getCorreo() {
        return correo;
    }

    public void setCorreo(String correo) {
        this.correo = correo;
    }
}




// Agregar un Contacto

package com.gab.myagenda;

import androidx.appcompat.app.AppCompatActivity;

import android.content.ContentValues;
import android.content.Intent;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import com.gab.myagenda.utilidades.Utilidades;

public class RegistroContactosActivity extends AppCompatActivity {

    EditText campoId, campoNombre, campoTelefono, campoCorreo;
    Button btnAgregarContacto;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_registro_usuarios);

        campoId = (EditText) findViewById(R.id.edtID);
        campoNombre = (EditText) findViewById(R.id.edtNombre);
        campoTelefono = (EditText) findViewById(R.id.edtTelefono);
        campoCorreo = (EditText) findViewById(R.id.edtCorreo);

    }

    public void onClick(View view) {
        //Intent miIntent=null;
        switch (view.getId()){
            case R.id.btnCRUDContacto:
                registrarUsuarios();
                break;

            case R.id.btnInicio:
                finish();
                break;


        }

       
    }

    
        private void registrarUsuarios() {
            ConexionSQLiteHelper conn = new ConexionSQLiteHelper(this, "bd_contactos", null, 1);

            SQLiteDatabase db = conn.getWritableDatabase();

            if (!campoId.getText().toString().isEmpty() && !campoNombre.getText().toString().isEmpty() && !campoTelefono.getText().toString().isEmpty()) {
                ContentValues registro = new ContentValues();


                ContentValues values = new ContentValues();
                values.put(Utilidades.CAMPO_ID, campoId.getText().toString());
                values.put(Utilidades.CAMPO_NOMBRE, campoNombre.getText().toString());
                values.put(Utilidades.CAMPO_TELEFONO, campoTelefono.getText().toString());
                values.put(Utilidades.CAMPO_CORREO, campoCorreo.getText().toString());


                Long idResultante = db.insert(Utilidades.TABLA_USUARIO, Utilidades.CAMPO_ID, values);


                Toast.makeText(getApplicationContext(), " Contacto Agregado Exitosamente     Id Registro: " + idResultante, Toast.LENGTH_LONG).show();
                limpiar();
                db.close();

            }else {
                Toast.makeText(RegistroContactosActivity.this, "Debe llenar los Campos Obligatorios", Toast.LENGTH_LONG).show();
            }
        }


    private void limpiar(){
        campoId.setText("");
        campoNombre.setText("");
        campoTelefono.setText("");
        campoCorreo.setText("");
    }



}

// Mostrar Lista de Contactos

package com.gab.myagenda;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Context;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.view.View;
import android.widget.ArrayAdapter;
import android.widget.ListView;

import com.gab.myagenda.entidades.Contacto;
import com.gab.myagenda.utilidades.Utilidades;

import java.util.ArrayList;

import static android.database.Cursor.*;

    public class MostrarContactos extends AppCompatActivity {

    ListView listviewContactos;
    ArrayList<String> listainformacion;
    ArrayList<Contacto> listaContactos;

    ConexionSQLiteHelper conn;


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_mostrar_contactos);

        conn= new ConexionSQLiteHelper(getApplicationContext(), "bd_contactos", null,1);

        listviewContactos = (ListView) findViewById(R.id.listviewContactos);

        consultarListaContactos();

        ArrayAdapter adaptador= new ArrayAdapter(this, android.R.layout.simple_expandable_list_item_1,listainformacion);
        listviewContactos.setAdapter(adaptador);



    }
    private void consultarListaContactos(){
        SQLiteDatabase db = conn.getWritableDatabase();

        Contacto = null;
        listaContactos = new ArrayList<Contacto>();

        Cursor cursor= db.rawQuery("SELECT * FROM "+ Utilidades.TABLA_USUARIO, null);

        while (cursor.moveToNext()){
            contacto= new Contacto();
            contacto.setId(cursor.getInt(0));
            contacto.setNombre(cursor.getString(1));
            contacto.setTelefono(cursor.getString(2));
            contacto.setCorreo(cursor.getString(3));

            listaContactos.add(contacto);



        }
        obtenerLista();

       
        }


    private void obtenerLista() {
        listainformacion = new ArrayList<>();
        for (int i=0; i<listaContactos.size(); i++){
            listainformacion.add(listaContactos.get(i).getId()+"-"+listaContactos.get(i).getNombre()
            +"\n"+listaContactos.get(i).getTelefono()+"\n"+listaContactos.get(i).getCorreo());


        }


    }

        public void onClick(View view) {
        finish();
        }
    }



// Modificar Contacto

package com.gab.myagenda;

import androidx.appcompat.app.AlertDialog;
import androidx.appcompat.app.AppCompatActivity;

import android.content.ContentValues;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import com.gab.myagenda.utilidades.Utilidades;

public class ModificarContacto extends AppCompatActivity {

    EditText campoId, campoNombre, campoTelefono, campoCorreo;
    ConexionSQLiteHelper conn;
    Button btnGuardarCambios;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_modificar_contacto);

        conn = new ConexionSQLiteHelper(getApplicationContext(), "bd_contactos", null, 1);

        campoId = (EditText) findViewById(R.id.edtID);
        campoNombre = (EditText) findViewById(R.id.edtNombre);
        campoTelefono = (EditText) findViewById(R.id.edtTelefono);
        campoCorreo = (EditText) findViewById(R.id.edtCorreo);
        btnGuardarCambios = findViewById(R.id.btnGuardarCambios);

        btnGuardarCambios.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                AlertDialog.Builder builder = new AlertDialog.Builder(ModificarContacto.this);
                builder.setMessage("¿Desea Modificar este Contacto?").setPositiveButton("Si", new DialogInterface.OnClickListener() {
                    @Override
                    public void onClick(DialogInterface dialog, int which) {
                        ModificarContacto();

                    }
                })
                        .setNegativeButton("No", new DialogInterface.OnClickListener() {
                            @Override
                            public void onClick(DialogInterface dialog, int which) {

                            }
                        }).show();
            }
        });

    }


        public void onClick(View view) {
            //Intent miIntent=null;
            switch (view.getId()){
                case R.id.btnGuardarCambios:
                    ModificarContacto();
                    break;

                case R.id.btnInicio:
                    finish();
                    break;


            }
    }
       private void ModificarContacto(){

           SQLiteDatabase db = conn.getWritableDatabase();
           String[] parametros = {campoId.getText().toString()};

           if (!campoId.getText().toString().isEmpty() && !campoNombre.getText().toString().isEmpty() && !campoTelefono.getText().toString().isEmpty() ) {

           ContentValues values = new ContentValues();
           values.put(Utilidades.CAMPO_NOMBRE, campoNombre.getText().toString());
           values.put(Utilidades.CAMPO_TELEFONO, campoTelefono.getText().toString());
           values.put(Utilidades.CAMPO_CORREO, campoCorreo.getText().toString());

           db.update(Utilidades.TABLA_USUARIO, values, Utilidades.CAMPO_ID+"=?",parametros);

           Toast.makeText(getApplicationContext(), "Contacto Actualizado Exitosamente", Toast.LENGTH_LONG).show();
           limpiar();
           db.close();

           }else {
               Toast.makeText(ModificarContacto.this, "Debe llenar todos los datos del usuario que desee Modificar", Toast.LENGTH_LONG).show();
           }


        }
    private void limpiar(){
        campoId.setText("");
        campoNombre.setText("");
        campoTelefono.setText("");
        campoCorreo.setText("");
    }

}



// Buscar Contacto

package com.gab.myagenda;

import androidx.appcompat.app.AppCompatActivity;

import android.content.ContentValues;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.view.View;
import android.widget.EditText;
import android.widget.Toast;

import com.gab.myagenda.utilidades.Utilidades;

public class BuscarContacto extends AppCompatActivity {

    EditText campoId, campoNombre, campoTelefono, campoCorreo;
    ConexionSQLiteHelper conn;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_buscar_contacto);

        conn = new ConexionSQLiteHelper(getApplicationContext(), "bd_contactos", null, 1);

        campoId = (EditText) findViewById(R.id.edtID);
        campoNombre = (EditText) findViewById(R.id.edtNombre);
        campoTelefono = (EditText) findViewById(R.id.edtTelefono);
        campoCorreo = (EditText) findViewById(R.id.edtCorreo);

    }

    public void onClick(View view) {
        //Intent miIntent=null;
        switch (view.getId()) {
            case R.id.btnBuscar:
                BuscarContacto();
                break;

            case R.id.btnInicio:
                finish();
                break;
        }
    }

    private void BuscarContacto() {
        SQLiteDatabase db = conn.getReadableDatabase();
        String[] parametros = {campoId.getText().toString()};
        String[] campos = {Utilidades.CAMPO_NOMBRE, Utilidades.CAMPO_TELEFONO, Utilidades.CAMPO_CORREO};

        try {
            Cursor = db.query(Utilidades.TABLA_USUARIO, campos, Utilidades.CAMPO_ID + "=?", parametros, null, null, null);
            cursor.moveToFirst();
            campoNombre.setText(cursor.getString(0));
            campoTelefono.setText(cursor.getString(1));
            campoCorreo.setText(cursor.getString(2));
            cursor.close();
            Toast.makeText(getApplicationContext(), "Contacto Encontrado", Toast.LENGTH_LONG).show();
        } catch (Exception e) {
            Toast.makeText(getApplicationContext(), "El Contacto No Existe", Toast.LENGTH_LONG).show();
            limpiar();


            ContentValues values = new ContentValues();
            values.put(Utilidades.CAMPO_NOMBRE, campoNombre.getText().toString());
            values.put(Utilidades.CAMPO_TELEFONO, campoTelefono.getText().toString());
            values.put(Utilidades.CAMPO_CORREO, campoCorreo.getText().toString());

        }
    }

    private void limpiar() {
        campoId.setText("");
        campoNombre.setText("");
        campoTelefono.setText("");
        campoCorreo.setText("");
    }
 }




// Eliminar Contacto

package com.gab.myagenda;

import androidx.appcompat.app.AlertDialog;
import androidx.appcompat.app.AppCompatActivity;

import android.content.ContentValues;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import com.gab.myagenda.utilidades.Utilidades;

import java.util.Arrays;

public class EliminarContacto extends AppCompatActivity {

    EditText campoId, campoNombre, campoTelefono, campoCorreo;
    ConexionSQLiteHelper conn;
    Button btnEliminar;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_eliminar_contacto);

        conn = new ConexionSQLiteHelper(getApplicationContext(), "bd_contactos", null, 1);

        campoId = (EditText) findViewById(R.id.edtID);
        campoNombre = (EditText) findViewById(R.id.edtNombre);
        campoTelefono = (EditText) findViewById(R.id.edtTelefono);
        campoCorreo = (EditText) findViewById(R.id.edtCorreo);
        btnEliminar = findViewById(R.id.btnEliminar);

        btnEliminar.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                AlertDialog.Builder builder = new AlertDialog.Builder(EliminarContacto.this);
                builder.setMessage("¿Desea Eliminar este Contacto?").setPositiveButton("Si", new DialogInterface.OnClickListener() {
                    @Override
                    public void onClick(DialogInterface dialog, int which) {
                        EliminaContacto();

                    }
                })
                        .setNegativeButton("No", new DialogInterface.OnClickListener() {
                            @Override
                            public void onClick(DialogInterface dialog, int which) {

                            }
                        }).show();
            }
        });

    }

    public void onClick(View view) {
        Intent miIntent=null;
        switch (view.getId()){
            case R.id.btnEliminar:
                EliminaContacto();
                break;

            case R.id.btnInicio:
                finish();
                break;


        }
}

    private void EliminaContacto() {

        SQLiteDatabase db = conn.getWritableDatabase();
        String[] parametros = {campoId.getText().toString()};
        String[] campos = {Utilidades.CAMPO_NOMBRE, Utilidades.CAMPO_TELEFONO, Utilidades.CAMPO_CORREO};


        try {
            Cursor = db.query(Utilidades.TABLA_USUARIO, campos, Utilidades.CAMPO_ID + "=?", parametros, null, null, null);
            cursor.moveToFirst();
            campoNombre.setText(cursor.getString(0));
            campoTelefono.setText(cursor.getString(1));
            campoCorreo.setText(cursor.getString(2));
            cursor.close();
            

            db.delete(Utilidades.TABLA_USUARIO, Utilidades.CAMPO_ID + "=?", parametros);

            Toast.makeText(getApplicationContext(), "Contacto Eliminado Exitosamente", Toast.LENGTH_LONG).show();
            limpiar();
            db.close();

        } catch (Exception e) {
            Toast.makeText(getApplicationContext(), "El Contacto No Existe", Toast.LENGTH_SHORT).show();
            Toast.makeText(EliminarContacto.this, "Debe poner un Id de contacto valido que desee eliminar", Toast.LENGTH_LONG).show();

        }


    }
    private void limpiar(){
        campoId.setText("");
        campoNombre.setText("");
        campoTelefono.setText("");
        campoCorreo.setText("");
    }
}

Código del archivo Android Manifest de la aplicación:

// Android Manifest

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gab.myagenda"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_index"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_index"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAgenda">
        <activity android:name=".BuscarContacto"></activity>
        <activity android:name=".EliminarContacto" />
        <activity android:name=".ModificarContacto" />
        <activity android:name=".MostrarContactos" />
        <activity android:name=".RegistroContactosActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>














